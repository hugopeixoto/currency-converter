
= form_tag do
  %fieldset.from

    %h2 Convert from

    .from
      = text_field_tag 'from_amount', '1.00'
      %span#from EUR
      
    %h2 Popular currencies
    %ul.from
      = render :partial => 'home/currency_item', :collection => Currency.popular, :locals => { :display => false }

  %fieldset.to

    %h2 To
    .to
      %span#to_amount= "%.2f" % (1/Currency.find_by_name('EUR').rate)
      %span#to USD

    %h2 Popular currencies
    %ul.to
      = render :partial => 'home/currency_item', :collection => Currency.popular, :locals => { :display => true }

%script{:type => 'text/javascript'}
  - @currencies.each do |currency|
    = "add_currency('%s', %f);" % [currency.name, currency.rate]

  = 'update_fields();'
